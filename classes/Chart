class Chart {
  constructor(canvasId, dateColonne, dataPression, dataTemperature, dataX) {
    this.canvasId = canvasId;
    this.dateColonne = dateColonne
    this.dataPression = dataPression;
    this.dataTemperature = dataTemperature;
    this.dataX = dataX;
  }

  createChart() {
    const ctx = document.getElementById(this.canvasId).getContext('2d');
    const myChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: this.dateColonne,
        datasets: [
          {
            label: 'Pression',
            data: this.dataPression,
            borderWidth: 2
          },
          {
              label: 'Temp√©rature',
              data: this.dataTemperature,
              borderWidth: 2
              
          },  
          {
              label: 'X',
              data: this.dataX,
              borderWidth: 2
          }]
      },

      options: {
        scales: {
          yAxes: [{
            ticks: {
              beginAtZero: true
            }
          }]
        }
      }
    });

    return myChart;
  }

  updateData(newData) {
    this.data = newData;
    this.myChart.data.datasets[0].data = newData;
    this.myChart.update();
  }
}